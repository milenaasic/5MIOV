<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    <variable
        name="phoneItem"
        type="com.vertial.fivemiov.ui.fragment_detail_contact.PhoneItem" />

        <variable
            name="phoneClick"
            type="com.vertial.fivemiov.ui.fragment_detail_contact.PhoneNumberClickListener" />

        <variable
            name="sipClick"
            type="com.vertial.fivemiov.ui.fragment_detail_contact.SipItemClickListener" />

        <variable
            name="prenumberClick"
            type="com.vertial.fivemiov.ui.fragment_detail_contact.PrenumberItemClickListener" />


    </data>


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/root_phone_item"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/dummy_background">

        <TextView
            android:id="@+id/num_exists_phone_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:onClick="@{(view) -> phoneClick.onClick(view)}"
            android:text="@{phoneItem.phoneNumber}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintBottom_toTopOf="@+id/phone_type_textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="1-156-56-256987" />

        <TextView
            android:id="@+id/phone_type_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintStart_toStartOf="@+id/num_exists_phone_textView"
            app:layout_constraintTop_toBottomOf="@+id/num_exists_phone_textView"
            app:setPhoneType="@{phoneItem}"
            tools:text="Mobile" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/prenumberCallButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.MyCallButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:onClick="@{() -> prenumberClick.onClick(phoneItem.phoneNumber)}"
            android:text="CALL"
            app:icon="@drawable/ic_call_action"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toStartOf="@+id/sipCallButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sipCallButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.MyCallButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="32dp"
            android:onClick="@{()-> sipClick.onClick(phoneItem.phoneNumber)}"
            android:text="SIP"
            app:icon="@drawable/ic_call_action_sip"
            app:iconGravity="textStart"
            app:layout_constraintBottom_toBottomOf="@+id/prenumberCallButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/prenumberCallButton"
            app:layout_constraintTop_toTopOf="@+id/prenumberCallButton"
            app:layout_constraintVertical_bias="0.0">

        </com.google.android.material.button.MaterialButton>

        <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="56dp"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
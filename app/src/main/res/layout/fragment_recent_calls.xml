<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/recentCallsCoordLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="?android:colorBackground"
                    tools:context=".ui.fragment_recent_calls.RecentCallsFragment">

                        <TextView
                            android:id="@+id/titleRecentCall"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:colorBackground"
                            android:elevation="1dp"
                            android:paddingStart="16dp"
                            android:paddingTop="4dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="4dp"
                            android:text="Recent calls"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@android:color/holo_green_dark"
                            tools:text="Recent calls" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recentCallsRecView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
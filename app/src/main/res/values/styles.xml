<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

    </style>


    <style name="RegistrationTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="dial_pad_number_text_style">
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.MyCallButtons">
        <item name="rippleColor">@android:color/holo_green_dark</item>
        <item name="android:textColor">@color/material_button_color_state_list</item>
        <item name="iconTint">@color/material_button_color_state_list</item>
        <item name="strokeColor">@color/material_button_color_state_list</item>
    </style>


</resources>
